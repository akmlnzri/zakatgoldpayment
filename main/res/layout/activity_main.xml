<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/mainbg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/weight"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="100dip"
            android:ems="10"
            android:fontFamily="sans-serif-smallcaps"
            android:hint="Weight (grams)"
            android:inputType="number"
            android:textAlignment="center" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/keep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Keep (80g)" />

            <RadioButton
                android:id="@+id/wear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wear (250g)" />

        </RadioGroup>

        <EditText
            android:id="@+id/currentgold"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:ems="10"
            android:fontFamily="sans-serif-smallcaps"
            android:hint="current gold value/gram"
            android:inputType="number"
            android:textAlignment="center" />

        <Button
            android:id="@+id/calculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:paddingLeft="16dp"
            android:text="calculate"
            android:textColor="#F8F6F6"
            app:iconTint="#64B64D"
            app:rippleColor="#3E3A3A" />

        <Button
            android:id="@+id/clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:text="clear" />

        <TextView
            android:id="@+id/totvalue"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Total value of the gold"
            android:textAlignment="center"
            android:textColor="#675E5E"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/totgoldzakat"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Total gold value zakat payable"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/totzakat"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Total zakat"
            android:textAlignment="center"
            android:textSize="20sp" />

    </LinearLayout>
</RelativeLayout>